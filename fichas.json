import json
import os

FILE = "fichas.json"

def load_fichas():
    if os.path.exists(FILE):
        with open(FILE, "r", encoding="utf-8") as f:
            return json.load(f)
    return {}

def save_fichas(fichas):
    with open(FILE, "w", encoding="utf-8") as f:
        json.dump(fichas, f, ensure_ascii=False, indent=4)
